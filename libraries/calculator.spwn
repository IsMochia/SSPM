buttons = [1g, 2g, 3g, 4g, 5g, 6g, 7g, 8g, 9g, 10g, 11g, 13g, 14g, 15g, 16g, 17g]
selected = counter(0)
selector = 12g

gamescene = import gamescene

main = counter(1i, bits = 17)
sec = counter(2i, bits = 17)


on(gamescene.button_b(), !{
    selected += 1
    if selected == buttons.length {
        selected = 0
    }
    selector.move_to(buttons[selected.to_const(..buttons.length)])
})

current_op = counter()

on(gamescene.button_a(), !{
    if selected <= 9 {
        //number
        main = main * 10 + selected
    } else if selected == 10 {
        main = 0
    } else if selected == 11 {
        //solve
        if current_op == 0 {
            //plus
            main += sec
        } else if current_op == 1 {
            //minus
            main -= sec
        } else if current_op == 2 {
            //mult
            main *= sec
        } else if current_op == 3 {
            //div
            sec /= main
            main = sec
        }
        sec = 0
    } else {
        //operator
        current_op = selected.to_const(12..17) - 12
        sec = main
        main = 0
    }
})
